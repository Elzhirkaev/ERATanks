@model IEnumerable<WorldOfTanks.Models.GameObject.Tank>

<div class="p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Tank Editor</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="CreateEditTank" class="btn btn-primary">Create New Tank</a>
        </div>
    </div>

    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" width="100%">
            <thead>
                <tr>
                    <th>Tank Name</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.Description</td>
                        <td>
                            <div class="text-center">
                                <div class="btn-group">
                                    <a asp-route-Id="@obj.TankId" asp-action="CreateEditTank" class="btn btn-primary mx-1">Edit</a>
                                    <a asp-route-Id="@obj.TankId" asp-action="DeleteTank" class="btn btn-danger mx-1">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>no tank exists.</p>
    }

</div>
